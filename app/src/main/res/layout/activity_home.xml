<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:id="@+id/clHome"
    tools:context="us.tadaima.weatherunderground.ui.home.HomeActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/summary_bg"

            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="?attr/actionBarSize"
                android:paddingStart="@dimen/summary_start_padding"
                android:paddingEnd="@dimen/summary_end_padding"
                android:paddingBottom="@dimen/summary_end_padding"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvSummaryTempHigh"
                    style="@style/SummaryTempHigh"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSummaryTempHigh"
                    android:text=""
                    android:id="@+id/tvSummaryTempLow"
                    style="@style/SummaryTempLow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSummaryTempLow"
                    android:layout_marginTop="@dimen/summary_humidity_top_margin"
                    android:text=""
                    android:id="@+id/tvSummaryHumidity"
                    style="@style/SummaryHumidity"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSummaryHumidity"
                    android:text=""
                    android:id="@+id/tvSummaryPressure"
                    style="@style/SummaryHumidity"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSummaryPressure"
                    android:text=""
                    android:id="@+id/tvSummaryWindSpeed"
                    style="@style/SummaryHumidity"
                    />
                <ImageView
                    android:layout_width="@dimen/summary_icon_width"
                    android:layout_height="@dimen/summary_icon_width"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/ivSummaryIcon"
                    android:src="@drawable/summary_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/ivSummaryIcon"
                    android:layout_marginTop="@dimen/location_top_margin"
                    android:text="@string/alpharetta"
                    style="@style/SummaryLocation"
                    />
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvWeatherObservations"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</android.support.design.widget.CoordinatorLayout>
