<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->
    <item android:top="0dp">
        <shape android:shape="rectangle">

            <gradient
                android:type="linear"
                android:startColor="@android:color/transparent"
                android:centerColor="@color/navy_blue"
                android:endColor="@android:color/transparent"
                android:angle="-90" />
            <corners android:radius="@dimen/card_corner_radius" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="@dimen/card_bg_bottom_margin" android:right="0dp" android:left="0dp" android:top="@dimen/card_bg_bottom_margin">
        <shape android:shape="rectangle">

            <solid android:color="@color/white" />
            <corners android:radius="@dimen/card_corner_radius" />

        </shape>
    </item>
</layer-list>